
<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= @ticket.showtime.showitem.name%></h4>
        <h5 class="modal-title"><%=@ticket.showtime.date.to_s(:def)%><%=@ticket.showtime.time.to_s(:def)%></h5>
      </div>
      <div class="modal-body">
       
          <h3>Seat: <%= @ticket.seat %></h3>
      
          <h4>Price:  <%= number_to_currency(@ticket.price, :unit => '&euro;') %></h4>
          <p>Stage view from selected seat:</p>

          <img src="/seatviews/<%= @ticket.seat %>.jpg" />

      </div>
      <div class="modal-footer">
 
       <% if @ticket.available %><%= button_to 'Add this ticket to cart' , line_items_path(:ticket_id => @ticket.id), :remote => true, :class=>"btn btn-block" %><%elsif @ticket.available == false && @ticket.in_cart(@cart)%><button type="button" class="btn btn-block btn-primary"  data-dismiss="modal">Ticket already in cart :)</button><%else%>
       <h3>Ticket <b><i>not</i></b> available</h3><%end%>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->