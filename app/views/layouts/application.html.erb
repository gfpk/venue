<!DOCTYPE html>
<html>
<head>
  <title>Venue</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  
  
  <%= csrf_meta_tags %>
</head>
<body>
	<nav>
		<div class="container">
			<%= link_to  root_path, id: "logo" do %>
  				<img src="/tor-logo.png"%>
  
			<% end %>
			<div class="pull-right">
				<%= link_to 'ShowItems', showitems_path, :class => 'btn' %>
				<%= link_to 'ShowTimes', showtimes_path, :class => 'btn' %>
				<%= link_to 'Tickets', tickets_path, :class => 'btn' %>
				<%= link_to 'Carts', carts_path, :class => 'btn' %>
				<%= link_to 'Line Items', line_items_path, :class => 'btn' %>
			</div>
		</div>
	</nav>
<div class="container">
	<div class="row">
		<div id="flash">
  		<% flash.each do |name, msg| %>
    		<%= content_tag :div, msg, :id => "flash_#{name}" %>
  		<% end %>
	</div>
	</div>
</div>
<div class="container">
	
	
	<div class="row">

		<div class="col-md-8">
			<%= yield %>
		</div>

		<div class="col-md-4">
			
		<div id="cart">
	      <% if @cart%>
	          <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
	              <%= render :partial => 'carts/cart', :object => @cart %>
	          <% end %>
	      <% end %>
    	</div>
		</div>

		</div>
	</div>
  <%= javascript_include_tag "application" %>
</body>
</html>
